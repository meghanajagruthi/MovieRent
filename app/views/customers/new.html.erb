<%= form_for :customer, url: customers_path do |f| %>
   
  <p>
    <%= f.label :Name%><br>
    <%= f.text_field :Name %>
  </p>
 
  <p>
    <%= f.label :mobile_number %><br>
    <%= f.text_field :mobile_number %>
  </p>
 <p>
    <%= f.label :email%><br>
    <%=f.text_field:email%>
    
  </p>
 
  <p>
    <%= f.label :address%><br>
    
    <%= f.text_area :address%>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 <%= link_to 'back', customers_path %>
<% end %>