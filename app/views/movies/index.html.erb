
<%= link_to "Home", controller: "welcome" %>
<h1>Movies.............</h1>
  
<table>
  <tr>
    <th>Name of the movie</th>
    <th>Language</th>
    <th>Date of Release</th>
    <th>Genre</th>
  </tr>
 
  <% @movie.each do |movie| %>
    <tr>
      <td><%= movie.movie_name %></td>
      <td><%= movie.Language %></td>
      <td><%= movie.release_date %></td>
      <td><%= movie.type_of_movie %></td>
       <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
       <td><%= link_to 'Delete_movie', movie_path(movie),
                    method: :delete, data: { confirm: 'Are you sure you want to delete this movie?' } %></td>
    </tr>
    
  <% end %>
  
</table>

<%= link_to 'Add movie', new_movie_path %>

 